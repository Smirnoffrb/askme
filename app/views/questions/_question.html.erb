<div class="mb-sm next-line">
  <%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <% unless question.hidden? %>
      <%= button_to fa_icon('eye-slash'), hide_question_path(question), method: :patch, title: 'Скрыть вопрос' %>
    <% end %>

    <%= link_to fa_icon("pencil"), edit_question_path(question),
      title: "Изменить вопрос" %>
    <%= button_to fa_icon("trash-o"), question_path(question),
      method: :delete, form: { data: { turbo_confirm: "Точно удалить вопрос?" } },
        title: "Удалить вопрос" %>
  </div>
</div>